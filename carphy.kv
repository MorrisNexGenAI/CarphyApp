# carphy.kv
#:kivy 2.1.0

<WelcomeScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10
        Label:
            text: "Welcome to Carphy Order System"
            font_size: 24
        Button:
            text: "Signup"
            size_hint: 0.5, 0.2
            pos_hint: {"center_x": 0.5}
            on_press: root.manager.current = "signup"
        Button:
            text: "Login"
            size_hint: 0.5, 0.2
            pos_hint: {"center_x": 0.5}
            on_press: root.manager.current = "login"

# carphy.kv (partial - only SignupScreen updated for brevity)
#:kivy 2.1.0

<SignupScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10
        Label:
            text: "Signup"
            font_size: 24
            color: 0, 0.5, 1, 1  # Blue for a student-friendly vibe
        TextInput:
            id: name_input
            hint_text: "Enter your name"
            size_hint_y: None
            height: 50
        TextInput:
            id: pin_input
            hint_text: "Enter your PIN"
            password: True
            size_hint_y: None
            height: 50
        TextInput:
            id: dept_input  # Changed from Spinner
            hint_text: "Enter your department"
            size_hint_y: None
            height: 50
        Button:
            text: "Submit"
            size_hint: 0.5, 0.2
            pos_hint: {"center_x": 0.5}
            background_color: 0, 0.7, 0, 1  # Green for positivity
            on_press: root.submit_signup()
        Label:
            id: status_label
            text: ""
            color: 1, 0, 0, 1
            size_hint_y: None
            height: 40
        Button:
            text: "Back to Welcome"
            size_hint: 0.5, 0.2
            pos_hint: {"center_x": 0.5}
            background_color: 0.5, 0.5, 0.5, 1  # Gray for neutrality
            on_press: root.manager.current = "welcome"
